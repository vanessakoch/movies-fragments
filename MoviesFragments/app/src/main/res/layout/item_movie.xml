<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="125dp"
            android:layout_height="149dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Titulo"
                android:textColor="@color/text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ano_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lançamento"
                android:textColor="@color/text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/genero_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gênero"
                android:textColor="@color/text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diretor_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Diretor"
                android:textColor="@color/text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/protagonista_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Protagonista"
                android:textColor="@color/text"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/txtLancamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/txtGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/txtDiretor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/txtProtagonista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

